{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "SecretKey": "sua-chave-super-secreta-aqui-com-pelo-menos-32-caracteres",
    "Issuer": "ApiGateway",
    "Audience": "ApiGatewayClients",
    "ExpirationMinutes": 60
  },
  "Services": {
    "InventoryService": {
      "BaseUrl": "http://localhost:5172",
      "DownstreamBasePath": "api/v1/Product",
      "TimeoutSeconds": 30,
      "Routes": [
        {
          "Template": "inventory/products",
          "Methods": ["GET", "POST"]
        },
        {
          "Template": "inventory/products/{id}",
          "Methods": ["GET", "PUT", "DELETE"]
        },
        {
          "Template": "inventory/stock/{productId}",
          "Methods": ["GET", "POST"]
        }
      ]
    },
    "SalesService": {
      "BaseUrl": "http://localhost:5048",
      "DownstreamBasePath": "api/v1/Sales",
      "TimeoutSeconds": 30,
      "Routes": [
        {
          "Template": "sales/orders",
          "Methods": ["GET", "POST"]
        },
        {
          "Template": "sales/orders/{id}",
          "Methods": ["GET", "PUT", "DELETE"]
        },
        {
          "Template": "sales/customers/{customerId}/orders",
          "Methods": ["GET"]
        }
      ]
    }
  },
  "RateLimit": {
    "auth": {
      "MaxRequests": 5,
      "WindowSeconds": 60
    },
    "inventory": {
      "MaxRequests": 100,
      "WindowSeconds": 60
    },
    "sales": {
      "MaxRequests": 50,
      "WindowSeconds": 60
    },
    "general": {
      "MaxRequests": 30,
      "WindowSeconds": 60
    }
  }
}
