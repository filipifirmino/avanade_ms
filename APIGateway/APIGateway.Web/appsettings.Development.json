        {
          "Template": "remove-product",
          "Methods": ["DELETE"]
        }
      ]
    },
    "SalesService": {
      "BaseUrl": "http://localhost:5048",
      "DownstreamBasePath": "/api/v1/Order",
      "TimeoutSeconds": 30,
      "Routes": [
        {
          "Template": "all-order",
          "Methods": ["GET"]
        },
        {
          "Template": "get-by-id",
          "Methods": ["GET"]
        },
        {
          "Template": "create-order",
          "Methods": ["POST"]
