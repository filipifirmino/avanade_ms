  "Services": {
    "InventoryService": {
      "BaseUrl": "http://localhost:5172",
      "DownstreamBasePath": "/api/v1/Product",
      "TimeoutSeconds": 30,
      "Routes": [
        {
          "Template": "all-products",
          "Methods": ["GET"]
